{% extends 'base.html.twig' %}

{% block title %}PartyHard{% endblock %}

{% block container %}
    <div class="row row-offcanvas row-offcanvas-right">

        <div class="col-xs-12 col-sm-9">
            <p class="pull-right visible-xs">
                <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
            </p>
            <div class="jumbotron">
                <h2>Welcome!</h2>
                <p>This service helps you find a party for the New Year. You can create your own party and share it with people all around the world.</p>
            </div>
            <div class="row">
                {% for party in parties %}
                    <div class="col-xs-6 col-lg-4">
                        <h2> {{ party.title }} </h2>
                        <p> {{ party.description|slice(0, 195) }} </p>
                        <p>City: <a href="{{ path('parties') }}?city={{ party.city|lower }}">{{ party.city }}</a></p>
                        <p>Gender: {{ party.gender }} </p>
                        <p>Members: {{ party.users|length }}/{{ party.members }} </p>
                        <p><a class="btn btn-default" href="{{ path('joinparty', {'slug' : party.slug}) }}" role="button">View details &raquo;</a></p>
                    </div><!--/.col-xs-6 col-lg-4-->
                {% endfor %}
            </div><!--/row-->
        </div><!--/.col-xs-12 col-sm-9-->
        <div class="col-xs-6 col-sm-3 sidebar-offcanvas" id="sidebar" role="navigation">
            <div class="list-group">
                {% for city in cities %}
                    <a href="{{ path('parties') }}?city={{ city.city|lower }}" class="list-group-item">{{ city.city }}</a>
                {% endfor %}
            </div>
        </div><!--/.sidebar-offcanvas-->
    </div><!--/row-->
{% endblock %}
