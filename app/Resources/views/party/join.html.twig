{% extends "base.html.twig" %}

{% block title %}
    {{ party.title }}
{% endblock %}

{% block container %}
    <div class="row row-offcanvas row-offcanvas-right">

        <div class="col-xs-12 col-sm-12">
            <div class="row">
                <div class="col-xs-6 col-lg-6">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <h2> {{ party.title }} </h2>
                            <p> {{ party.description }} </p>
                            <p>City: {{ party.city }} </p>
                            <p>Needed gender: {{ party.gender }} </p>
                            <p>Members: {{ party.users|length }}/{{ party.members }} </p>
                            <p>Donate: {{ party.donate }} </p>
                            <p>Created: {{ party.createdAt|date }} </p>
                            <hr>
                            <table class="table table-hover">
                                <caption>Members of party</caption>
                                <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Gender</th>
                                    <th>Email</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for user in users %}
                                    <tr>
                                        <td>{{ loop.index }}</td>
                                        <td>{{ user.name }}</td>
                                        <td>{{ user.gender }}</td>
                                        <td>{{ user.email }}</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div><!--/.col-xs-6 col-lg-6-->
                <div class="col-xs-6 col-lg-6">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <h2 align="center"> Join party </h2>
                            {{ form_start(form) }}
                            {{ form_errors(form) }}

                            <legend>New user</legend>
                            <div class="active">
                                {{ form_label(form.name) }}
                                {{ form_errors(form.name) }}
                                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <br/>
                            <div class="active">
                                {{ form_label(form.gender) }}
                                {{ form_errors(form.gender) }}
                                {{ form_widget(form.gender) }}
                            </div>
                            <br/>
                            <div class="active">
                                {{ form_label(form.email) }}
                                {{ form_errors(form.email) }}
                                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <br/>
                            <div class="active">
                                {{ form_label(form.phone) }}
                                {{ form_errors(form.phone) }}
                                {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <br/>
                            <div class="active">
                                {{ form_widget(form.send, {'attr': {'class': 'btn btn-primary'}}) }}
                            </div>

                            {{ form_end(form) }}
                        </div>
                    </div>
                </div><!--/.col-xs-6 col-lg-6-->
            </div><!--/row-->
        </div><!--/.col-xs-12.col-sm-12-->
    </div><!--/row-->
{% endblock %}
