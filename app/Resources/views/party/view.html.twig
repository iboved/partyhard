{% extends "base.html.twig" %}

{% block title %}
    {{ party.title }}
{% endblock %}

{% block container %}
    <div class="panel panel-default">
        <div class="panel-body">
            <h2> {{ party.title }} </h2>
            <p> {{ party.description }} </p>
            <p>City: {{ party.city }} </p>
            <p>Needed gender: {{ party.gender }} </p>
            <p>Members: {{ party.users|length }}/{{ party.members }} </p>
            <p>Donate: {{ party.donate }} </p>
            <p>Created: {{ party.createdAt|date }} </p>
            <div align="right">
                <a href="#">Go!!!</a>
            </div>
            <hr>
            <table class="table table-hover">
                <caption>Members of party</caption>
                <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Gender</th>
                    <th>Email</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>{{ user.name }}</td>
                        <td>{{ user.gender }}</td>
                        <td>{{ user.email }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
